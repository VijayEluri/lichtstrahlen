<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- activity styles -->
    <style name="Theme" parent="@android:style/Theme.Material">
        <item name="ic_action_book">@drawable/ic_action_book</item>
        <item name="ic_action_search">@drawable/ic_action_search</item>
        <item name="ic_action_share">@drawable/ic_action_share</item>
    </style>

    <style name="Theme.Light" parent="@android:style/Theme.Material.Light.DarkActionBar">
        <item name="ic_action_book">@drawable/ic_action_book</item>
        <item name="ic_action_search">@drawable/ic_action_search</item>
        <item name="ic_action_share">@drawable/ic_action_share</item>
    </style>

    <!-- dialog styles -->
    <style name="DialogPrimary" parent="@android:style/Theme.Material.Dialog">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Medium</item>
    </style>

    <style name="DialogSecondary" parent="@android:style/Theme.Material.Dialog">
        <item name="android:textColor">?android:attr/textColorSecondary</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Small</item>
    </style>

</resources>