<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- activity styles -->
    <style name="Theme" parent="@android:style/Theme.Holo">
        <item name="ic_action_book">@drawable/ic_action_book_dark</item>
        <item name="ic_action_search">@drawable/ic_action_search_dark</item>
        <item name="ic_action_share">@drawable/ic_action_share_dark</item>
    </style>

    <style name="Theme.Light" parent="@android:style/Theme.Holo.Light">
        <item name="ic_action_book">@drawable/ic_action_book_light</item>
        <item name="ic_action_search">@drawable/ic_action_search_light</item>
        <item name="ic_action_share">@drawable/ic_action_share_light</item>
    </style>

    <!-- widget styles -->
    <style name="Widget" parent="@android:style/Widget">
        <item name="textColorPrimary">?android:attr/textColorPrimary</item>
        <item name="textColorSecondary">?android:attr/textColorSecondary</item>
        <item name="textColorTertiary">?android:attr/textColorTertiary</item>
        <item name="widget_bg">@drawable/widget_bg_dark</item>
    </style>

    <style name="Widget.Light" parent="@android:style/Widget">
        <item name="textColorPrimary">?android:attr/textColorPrimaryInverse</item>
        <item name="textColorSecondary">?android:attr/textColorSecondaryInverse</item>
        <item name="textColorTertiary">?android:attr/textColorTertiaryInverse</item>
        <item name="widget_bg">@drawable/widget_bg_light</item>
    </style>

    <!-- dialog styles -->
    <style name="DialogPrimary" parent="@android:style/Theme.Dialog">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Medium</item>
    </style>

    <style name="DialogSecondary" parent="@android:style/Theme.Dialog">
        <item name="android:textColor">?android:attr/textColorSecondary</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Small</item>
    </style>

</resources>